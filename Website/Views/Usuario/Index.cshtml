@model IEnumerable<Biblioteca.Data.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PerfilUsuario.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PerfilUsuario.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Matricula }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Matricula }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Matricula })
        </td>
    </tr>
}

</table>
